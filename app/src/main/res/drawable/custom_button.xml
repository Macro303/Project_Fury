<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
		<shape>
			<gradient
				android:angle="270"
				android:endColor="@color/colorAccent"
				android:startColor="@color/colorAccent"/>
			<stroke
				android:width="3dp"
				android:color="#555"/>
			<corners
				android:radius="3dp"/>
			<padding
				android:bottom="10dp"
				android:left="10dp"
				android:right="10dp"
				android:top="10dp"/>
		</shape>
	</item>

	<item android:state_enabled="false">
		<shape>
			<gradient
				android:angle="270"
				android:endColor="@color/colorTextSecondary"
				android:startColor="@color/colorTextSecondary"/>
			<stroke
				android:width="3dp"
				android:color="#555"/>
			<corners
				android:radius="3dp"/>
			<padding
				android:bottom="10dp"
				android:left="10dp"
				android:right="10dp"
				android:top="10dp"/>
		</shape>
	</item>

	<item>
		<shape>
			<gradient
				android:angle="270"
				android:endColor="@color/colorPrimaryDark"
				android:startColor="@color/colorPrimaryDark"/>
			<stroke
				android:width="3dp"
				android:color="#555"/>
			<corners
				android:radius="3dp"/>
			<padding
				android:bottom="10dp"
				android:left="10dp"
				android:right="10dp"
				android:top="10dp"/>
		</shape>
	</item>
</selector>