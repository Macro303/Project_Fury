<resources>
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:textColorPrimary">@color/colorTextPrimary</item>
		<item name="android:textAppearanceButton">@color/colorLightPrimary</item>
		<item name="android:textColorHighlight">@color/colorPrimary</item>
		<item name="colorControlNormal">@color/colorTextPrimary</item>
		<item name="android:textSize">16sp</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="buttonAppearance" parent="Theme.AppCompat">
		<item name="android:background">@color/colorPrimaryDark</item>
		<item name="android:textColor">@color/colorTextIcon</item>
		<item name="android:fontFamily">sans-serif-smallcaps</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingStart">@dimen/buttonPaddingStart</item>
		<item name="android:paddingEnd">@dimen/buttonPaddingEnd</item>
	</style>

	<!-- Jonah's Attempt at Styles -->
	<style name="BaseStyle" parent="AppTheme">
		<item name="android:colorBackground">@color/windowBackground</item>
		<item name="android:textColorPrimary">@color/colorTextPrimary</item>
		<item name="android:textAppearanceButton">@color/colorLightPrimary</item>
		<item name="android:textColorHighlight">@color/colorPrimary</item>
		<item name="android:textSize">@dimen/baseTextSize</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>

	<style name="EditTextLayoutStyle" parent="BaseStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginEnd">@dimen/editTextMargin</item>
		<item name="android:layout_marginStart">@dimen/editTextMargin</item>
	</style>

	<style name="EditTextStyle" parent="BaseStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:maxLines">1</item>
	</style>

	<style name="EditTextStyle.Restrictive">
		<item name="android:maxLength">20</item>
		<item name="android:singleLine">true</item>
		<item name="android:digits">@string/alphaNumericCharacters</item>
	</style>

	<style name="EditTextStyle.Restrictive.Disabled">
		<item name="android:clickable">false</item>
		<item name="android:cursorVisible">false</item>
		<item name="android:enabled">false</item>
		<item name="android:focusable">false</item>
		<item name="android:focusableInTouchMode">false</item>
	</style>

	<style name="EditTextStyle.Restrictive.Description">
		<item name="android:maxLength">128</item>
		<item name="android:maxLines">6</item>
		<item name="android:singleLine">false</item>
		<item name="android:scrollbars">vertical</item>
	</style>

	<style name="EditTextStyle.Restrictive.Description.Disabled">
		<item name="android:clickable">false</item>
		<item name="android:cursorVisible">false</item>
		<item name="android:enabled">false</item>
		<item name="android:focusable">false</item>
		<item name="android:focusableInTouchMode">false</item>
	</style>

	<style name="SpinKit" parent="SpinKitView.Large.FadingCircle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_centerInParent">true</item>
		<item name="android:visibility">gone</item>
		<item name="SpinKit_Color">@color/colorDivider</item>
	</style>

	<style name="ButtonStyle" parent="BaseStyle">
		<item name="android:background">@drawable/custom_button</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingStart">@dimen/buttonPadding</item>
		<item name="android:paddingEnd">@dimen/buttonPadding</item>
		<item name="android:textColor">@color/colorTextIcon</item>
		<item name="android:textStyle">bold</item>
		<item name="android:fontFamily">sans-serif-smallcaps</item>
		<item name="android:textSize">@dimen/buttonTextSize</item>
	</style>

	<style name="ButtonStyle.Sized">
		<item name="android:minWidth">@dimen/minWidthDimen</item>
	</style>

	<style name="ButtonStyle.Borderless">
		<item name="android:background">?attr/selectableItemBackgroundBorderless</item>
		<item name="android:textColor">@color/colorAccent</item>
		<item name="android:textStyle">normal</item>
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:textSize">@dimen/baseTextSize</item>
	</style>

	<style name="ButtonStyle.Image">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentEnd">true</item>
		<item name="android:background">@null</item>
		<item name="android:src">@drawable/ic_add_box_white_36dp</item>
		<item name="android:tint">@color/colorTextPrimary</item>
	</style>

	<style name="TextStyle" parent="BaseStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/colorTextPrimary</item>
	</style>

	<style name="TextStyle.Title">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_alignParentStart">true</item>
		<item name="android:layout_marginStart">10dp</item>
		<item name="android:gravity">start</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TextStyle.Question">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:textStyle">italic</item>
	</style>

	<style name="SpinnerStyle" parent="BaseStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">start|center</item>
		<item name="android:paddingEnd">@dimen/spinnerPaddingEnd</item>
		<item name="android:paddingStart">@dimen/spinnerPaddingStart</item>
		<item name="android:layout_column">1</item>
	</style>

	<style name="TableStyle" parent="BaseStyle">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
	</style>

	<style name="TableStyle.Row">
		<item name="android:layout_margin">@dimen/editTextMargin</item>
	</style>

</resources>
