<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:id="@+id/allBoardsFragment_cardView"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	card_view:cardBackgroundColor="@color/colorTextPrimary"
	card_view:cardCornerRadius="15dp"
	card_view:cardElevation="5dp"
	card_view:cardUseCompatPadding="true">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/allBoardsActivity_projectInfoButton"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_centerInParent="true"
			android:layout_marginStart="20dp"
			android:maxLines="1"
			android:text="@string/button_projectInfo"
			android:textColor="@color/windowBackground"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/allBoardsActivity_noTaskTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="@string/textView_noProjectsFound"
			android:textColor="@color/windowBackground"
			android:visibility="gone"/>

		<ImageView
			android:id="@+id/allBoardsActivity_projectBoardImageView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerInParent="true"
			android:layout_marginEnd="20dp"
			android:maxLines="1"
			android:src="@drawable/ic_forward_black_36dp"
			/>

	</RelativeLayout>

</android.support.v7.widget.CardView>