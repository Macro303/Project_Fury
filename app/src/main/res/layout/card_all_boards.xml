<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:id="@+id/backlogFragment_cardView"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	card_view:cardBackgroundColor="@color/colorTextPrimary"
	card_view:cardCornerRadius="15dp"
	card_view:cardElevation="5dp"
	card_view:cardUseCompatPadding="true">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/allBoardsActivity_projectInfoButton"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:maxLines="1"
			android:text="@string/button_projectInfo"
			android:textColor="@color/windowBackground"/>

		<Space
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="2"/>

		<Button
			android:id="@+id/allBoardsActivity_projectBoardButton"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableRight="@drawable/ic_forward_black_36dp"
			android:maxLines="1"
			/>

	</LinearLayout>

</android.support.v7.widget.CardView>