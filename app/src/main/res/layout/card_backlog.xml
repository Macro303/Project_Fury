<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/backlogFragment_cardView"
	style="@style/CardStyle">

	<TableLayout
		style="@style/TableStyle"
		android:stretchColumns="0,2">

		<TableRow
			style="@style/TableStyle.Row">

			<TextView
				android:id="@+id/backlogFragment_taskName"
				style="@style/TextStyle.Title"
				android:layout_column="0"
				android:textColor="@color/windowBackground"
				android:textSize="@dimen/baseTextSize"/>

			<TextView
				android:id="@+id/backlogFragment_noTaskTextView"
				style="@style/TextStyle"
				android:layout_column="1"
				android:text="@string/textView_noTasksFound"
				android:textColor="@color/windowBackground"/>

			<TextView
				android:id="@+id/backlogFragment_taskPriority"
				style="@style/TextStyle"
				android:layout_column="2"
				android:gravity="end"
				android:textColor="@color/windowBackground"/>

		</TableRow>

		<TableRow
			style="@style/TableStyle.Row">

			<TextView
				android:id="@+id/backlogFragment_taskAssignee"
				style="@style/TextStyle"
				android:layout_column="0"
				android:textColor="@color/windowBackground"/>

			<TextView
				android:id="@+id/backlogFragment_taskColumn"
				style="@style/TextStyle"
				android:layout_column="2"
				android:gravity="end"
				android:textColor="@color/windowBackground"/>

		</TableRow>

	</TableLayout>

</android.support.v7.widget.CardView>