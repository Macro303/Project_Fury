<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:id="@+id/backlogFragment_cardView"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	card_view:cardCornerRadius="15dp"
	card_view:cardElevation="5dp"
	card_view:cardUseCompatPadding="true">

	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="15dp"
		android:stretchColumns="0,1">

		<TableRow
			android:layout_marginBottom="5dp"
			android:layout_marginTop="5dp">

			<TextView
				android:id="@+id/backlogFragment_taskName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="0"
				android:gravity="start"
				android:textStyle="bold"/>

			<TextView
				android:id="@+id/backlogFragment_taskPriority"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:gravity="end"/>

		</TableRow>

		<TableRow
			android:layout_marginBottom="5dp"
			android:layout_marginTop="5dp">

			<TextView
				android:id="@+id/backlogFragment_taskAssignee"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="0"
				android:gravity="start"/>

			<TextView
				android:id="@+id/backlogFragment_taskColumn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:gravity="end"/>

		</TableRow>

	</TableLayout>

</android.support.v7.widget.CardView>