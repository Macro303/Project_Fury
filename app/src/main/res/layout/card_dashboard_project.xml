<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/dashboard_Project_CardView"
	style="@style/CardStyle"
	app:cardBackgroundColor="@color/colorPrimary">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/listItem_projectName"
			style="@style/TextStyle.Title"
			android:layout_width="wrap_content"
			android:minWidth="@dimen/minWidthDimen"
			android:textSize="@dimen/baseTextSize"/>

		<com.daimajia.numberprogressbar.NumberProgressBar
			android:id="@+id/listItem_projectProgress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:layout_marginStart="10dp"
			android:layout_toEndOf="@id/listItem_projectName"
			app:progress_reached_color="@color/colorTextSecondary"
			app:progress_text_color="@color/windowBackground"
			app:progress_text_size="10sp"
			app:progress_unreached_color="@color/colorTextPrimary"/>

	</RelativeLayout>

</android.support.v7.widget.CardView>