<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="tobedevelopers.project_fury">

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_fury_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:name=".login.implementation.LoginView"
			android:configChanges="orientation"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.NoActionBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".register.implementation.RegisterView"
			android:configChanges="orientation"
			android:parentActivityName=".login.implementation.LoginView"
			android:screenOrientation="portrait">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".login.implementation.LoginView"/>
		</activity>
		<activity
			android:name=".dashboard.implementation.DashboardView"
			android:configChanges="orientation"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.NoActionBar"/>
		<activity
			android:name=".create_project.implementation.CreateProjectView"
			android:configChanges="orientation"
			android:parentActivityName=".dashboard.implementation.DashboardView"
			android:screenOrientation="portrait">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".dashboard.implementation.DashboardView"/>
		</activity>
		<activity
			android:name=".project_info.implementation.ProjectInfoView"
			android:configChanges="orientation"
			android:screenOrientation="portrait"/>
		<activity
			android:name=".task_info.implementation.TaskInfoView"
			android:configChanges="orientation"
			android:screenOrientation="portrait"/>
		<activity
			android:name=".backlog.implementation.BacklogView"
			android:configChanges="orientation"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.NoActionBar"/>
		<activity
			android:name=".create_task.implementation.CreateTaskView"
			android:configChanges="orientation"
			android:screenOrientation="portrait"/>
		<activity
			android:name=".settings.implementation.SettingsView"
			android:configChanges="orientation"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.NoActionBar"/>
		<activity
			android:name=".all_boards.implementation.AllBoardsView"
			android:configChanges="orientation"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.NoActionBar"/>
		<activity
			android:name=".project_board.implementation.ProjectBoardView"
			android:configChanges="orientation"
			android:parentActivityName=".all_boards.implementation.AllBoardsView"
			android:screenOrientation="portrait">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".all_boards.implementation.AllBoardsView"/>
		</activity>
	</application>

</manifest>
